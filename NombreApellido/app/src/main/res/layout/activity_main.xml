<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Nombre:"
        android:id="@+id/textoNombre"
        android:layout_alignParentTop="true"
        android:singleLine="false"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/nombre"
        android:layout_gravity="center"
        android:layout_above="@+id/botonApellido" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textoApellido"
        android:layout_alignTop="@+id/apellidos"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/apellidos"
        android:layout_toStartOf="@+id/apellidos"
        android:textSize="20dp"
        android:text="Apellido:" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nombre"
        android:hint="Tu nombre aquí"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/apellidos"
        android:hint="Apellidos aquí"
        android:layout_below="@+id/botonNombre"
        android:layout_toEndOf="@+id/textoNombre" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:id="@+id/botonNombre"
        android:layout_below="@+id/nombre"
        android:layout_toEndOf="@+id/textoNombre" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:id="@+id/botonApellido"
        android:layout_below="@+id/nombre"
        android:layout_toEndOf="@+id/textoNombre"
        android:layout_marginTop="82dp" />

</RelativeLayout>
