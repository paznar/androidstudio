<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nombreProducto"
        android:layout_alignParentTop="true"
        android:hint="Nombre del producto..."
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cantidadProducto"
        android:hint="cantidad..."
        android:layout_below="@+id/nombreProducto"
        android:layout_alignEnd="@+id/nombreProducto"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/precioProducto"
        android:layout_below="@+id/cantidadProducto"
        android:layout_alignEnd="@+id/cantidadProducto"
        android:layout_alignParentStart="true"
        android:hint="precio..." />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insertar Producto"
        android:id="@+id/insertar"
        android:layout_below="@+id/precioProducto"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/precioProducto" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listar Producto"
        android:id="@+id/listar"
        android:layout_below="@+id/insertar"
        android:layout_alignEnd="@+id/insertar"
        android:layout_alignParentStart="true" />
</RelativeLayout>
