<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escribir"
        android:id="@+id/escribir"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leer"
        android:id="@+id/leer"
        android:layout_below="@+id/escribir"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/escribir" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEER RAW"
        android:id="@+id/leerRaw"
        android:layout_below="@+id/leer"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/leer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/funcion"
        android:layout_below="@+id/leerRaw"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/leerRaw" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/texto"
        android:layout_below="@+id/funcion"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/funcion" />
</RelativeLayout>
